<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".Watering_History">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:background="@color/waterbg">

        <!-- Header -->
        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="0dp"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/g"
                android:elevation="4dp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:gravity="end">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                <!--menu btn-->
                <ImageButton
                        android:id="@+id/backbutton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_backbtn"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Menu Button"
                        android:padding="8dp"/>

                <TextView
                        android:id="@+id/titleTextView"
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:text="Watering History"
                        android:fontFamily="@font/fredokabold"
                        android:textColor="@android:color/white"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp"/>
                <ImageButton
                        android:id="@+id/cancel_delete"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ex_close"
                        android:contentDescription="Cancel Deletion"
                        android:visibility="gone"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:layout_marginEnd="8dp" app:tint="@color/white"/>

                <ImageButton
                        android:layout_height="30dp" android:layout_width="30dp"
                        app:srcCompat="@drawable/remove"
                        android:id="@+id/remove_water"
                        android:background="@android:color/transparent" android:scaleType="fitCenter"
                        android:layout_gravity="center_vertical" android:layout_marginEnd="15sp"
                        app:tint="@color/white" android:visibility="gone"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

        <!--search bar-->

        <TextView
                android:id="@+id/searchHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search water history..."
                android:textColor="@color/gray2"
                android:textSize="14dp"
                android:paddingStart="16dp"
                android:paddingEnd="8dp"
                android:gravity="left|center_vertical"
                app:layout_constraintStart_toStartOf="@+id/searchbar"
                app:layout_constraintTop_toTopOf="@+id/searchbar"
                app:layout_constraintBottom_toBottomOf="@+id/searchbar" android:layout_marginStart="30dp"
                android:fontFamily="@font/poppinsregular"/>

        <ImageButton
                android:layout_width="35dp"
                android:layout_height="35dp" app:srcCompat="@drawable/filter" android:id="@+id/filter_button"
                app:layout_constraintTop_toTopOf="@+id/searchbar" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/searchbar" android:layout_marginEnd="30dp"
                android:scaleType="fitCenter" android:background="@android:color/transparent" app:tint="@color/dg"/>
        <androidx.appcompat.widget.SearchView
                android:id="@+id/searchbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:iconifiedByDefault="true"
                android:background="@drawable/searchbar"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                app:searchIcon="@drawable/searchicon"
                app:searchHintIcon="@null" app:layout_constraintEnd_toStartOf="@+id/filter_button"
                android:layout_marginEnd="10dp"/>

        <ImageView
                android:id="@+id/emptyIcon"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:visibility="gone" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/ic_nowater"
                app:layout_constraintBottom_toBottomOf="parent" app:tint="@color/empty"
                app:layout_constraintTop_toBottomOf="@+id/toolbar"/> <!-- Replace with your icon -->
        android:layout_centerInParent="true"
        android:visibility="gone"/>

        <TextView
                android:id="@+id/emptyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No history yet"
                android:textSize="17dp"
                android:textColor="@color/empty"
                android:visibility="gone"
                android:layout_below="@id/emptyIcon"
                android:layout_centerHorizontal="true" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emptyIcon" android:fontFamily="@font/fredokabold"
                android:layout_marginTop="15dp"/>


        <!--Recyclerview 4 plants-->
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/waterRecyclerView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:listitem="@layout/plant_item" app:layout_constraintTop_toBottomOf="@+id/searchbar"
                android:layout_marginTop="15dp" app:layout_constraintBottom_toTopOf="@+id/see_more_button"/>

        <Button
                android:id="@+id/see_more_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="See More"
                android:textSize="11dp"
                android:backgroundTint="@color/waterbg"
                android:textColor="@color/g"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:fontFamily="@font/fredokabold"
                app:cornerRadius="@null" app:shapeAppearance="@null"/>



        <!--Add plant-->
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/addplant" android:id="@+id/addplant2"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="15dp" android:layout_marginBottom="15dp" android:scaleType="fitXY"
                android:background="@android:color/transparent" android:visibility="gone"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--Sidebarmenu-->

    <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigationView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/sidebar_header"
            app:menu="@menu/sidebar_menu"
            android:background="@color/soil"
            app:itemIconTint="@color/white"
            app:itemTextColor="@color/white"
            app:itemShapeAppearance="@style/menu_item_shape"
            app:itemTextAppearance="@style/menu_font" app:itemBackground="@drawable/nav_item_bg"
            app:itemVerticalPadding="5dp"
            app:itemHorizontalPadding="15dp"
            app:itemIconPadding="20dp"
            app:itemShapeInsetStart="0dp"
            app:itemShapeInsetEnd="0dp"
            app:itemShapeInsetTop="5dp"
            app:itemShapeInsetBottom="5dp"
            app:divider="@color/soil"

            app:itemShapeFillColor="@color/db"/>


</androidx.drawerlayout.widget.DrawerLayout>

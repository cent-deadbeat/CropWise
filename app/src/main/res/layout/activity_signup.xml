<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Signup">

    <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/curve1"/>

    <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/curve2" />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/imageView4"
            app:layout_constraintBottom_toTopOf="@+id/imageView5">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:paddingBottom="30dp">

            <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/logo" app:layout_constraintTop_toTopOf="parent"
            />

            <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Signup"
                    android:textColor="@color/dg"
                    android:textSize="28dp"
                    android:fontFamily="@font/fredokabold"
                    app:layout_constraintTop_toBottomOf="@+id/imageView6"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                <!-- Username -->
                <EditText
                        android:id="@+id/editTextUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Username"
                        android:inputType="text"
                        android:drawableStart="@drawable/user"
                        android:drawablePadding="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:background="?android:attr/editTextBackground"
                        android:backgroundTint="@color/g"
                        android:fontFamily="@font/poppinsregular"/>

                <TextView
                        android:id="@+id/errorUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:textSize="11dp"
                        android:visibility="gone"
                        android:fontFamily="@font/poppinsregular"/>

                <!-- Email -->
                <EditText
                        android:id="@+id/editTextEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:drawableStart="@drawable/email"
                        android:drawablePadding="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:background="?android:attr/editTextBackground"
                        android:backgroundTint="@color/g"
                        android:fontFamily="@font/poppinsregular"/>

                <TextView
                        android:id="@+id/errorEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:textSize="11dp"
                        android:visibility="gone"
                        android:fontFamily="@font/poppinsregular"/>

                <!-- Contact Number -->
                <!-- Replace the existing EditText for Contact Number with this -->
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                    <!-- Phone Icon -->
                    <ImageView
                            android:id="@+id/imageView19"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:foregroundGravity="center_vertical"
                            app:srcCompat="@drawable/ic_baseline_phone_24"/>

                    <!-- Spinner for Country Code -->
                    <Spinner
                            android:id="@+id/spinnerCountryCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/imageView19"
                            android:layout_centerVertical="true"
                            android:background="@android:color/transparent"
                            android:spinnerMode="dropdown"
                            android:padding="5dp"/>

                    <!-- EditText for Phone Number -->
                    <EditText
                            android:id="@+id/editTextContact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/spinnerCountryCode"
                            android:layout_centerVertical="true"
                            android:hint="Phone Number"
                            android:inputType="phone"
                            android:textColor="@color/black"
                            android:textColorHint="@color/gray"
                            android:background="?android:attr/editTextBackground"
                            android:backgroundTint="@color/g"
                            android:fontFamily="@font/poppinsregular"
                            android:paddingEnd="5dp"/>
                </RelativeLayout>

                <!-- Remove the btnOTP button since OTP verification is no longer needed -->

                <TextView
                        android:id="@+id/errorContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:textSize="11dp"
                        android:visibility="gone"
                        android:fontFamily="@font/poppinsregular"
                        tools:text="Phone number must be 10 digits after +63"/>

                <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnOTP"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Send OTP"
                        android:background="@drawable/button2"
                        android:textColor="@color/white"
                        android:fontFamily="@font/fredokabold"
                        android:textAllCaps="false"
                        android:textSize="15dp"
                        android:layout_marginTop="10dp"
                        android:visibility="gone"
                />

                <!-- Password -->
                <EditText
                        android:id="@+id/editTextPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:drawableStart="@drawable/ass"
                        android:drawableEnd="@drawable/hide"
                        android:drawablePadding="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:background="?android:attr/editTextBackground"
                        android:backgroundTint="@color/g"
                        android:fontFamily="@font/poppinsregular"/>

                <TextView
                        android:id="@+id/errorPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:textSize="11dp"
                        android:visibility="gone"
                        android:fontFamily="@font/poppinsregular"/>

                <!-- Confirm Password -->
                <EditText
                        android:id="@+id/editTextConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Confirm Password"
                        android:inputType="textPassword"
                        android:drawableStart="@drawable/ass"
                        android:drawableEnd="@drawable/hide"
                        android:drawablePadding="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:background="?android:attr/editTextBackground"
                        android:backgroundTint="@color/g"
                        android:fontFamily="@font/poppinsregular"/>

                <TextView
                        android:id="@+id/errorConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:textSize="11dp"
                        android:visibility="gone"
                        android:fontFamily="@font/poppinsregular"/>

                <!-- Terms and Conditions -->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:orientation="horizontal">

                    <CheckBox
                            android:id="@+id/CheckBoxTerms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="I have read the"
                            android:fontFamily="@font/poppinsregular"
                            android:enabled="false"
                            android:buttonTint="@color/g"/>

                    <TextView
                            android:id="@+id/TermsConditions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="   Terms and Conditions"
                            android:textColor="@color/g"
                            android:fontFamily="@font/poppinsregular"
                            android:clickable="true"
                            android:focusable="true"/>
                </LinearLayout>

                <!-- Register Button -->
                <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/buttonRegister"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Register"
                        android:background="@drawable/button2"
                        android:textColor="@color/white"
                        android:fontFamily="@font/fredokabold"
                        android:layout_marginTop="30dp"
                        android:textAllCaps="false"
                        android:textSize="15dp"/>

                <!-- Progress Bar -->
                <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_marginTop="20dp"
                        android:textAlignment="center"
                        android:foregroundGravity="center"
                        android:layout_gravity="center"
                        android:indeterminateTint="@color/g"
                        android:progressBackgroundTint="@color/lg"
                        android:foregroundTint="@color/g"
                        android:progressTint="@color/g"
                        android:secondaryProgressTint="@color/lg"/>

                <!-- Login Link -->
                <TextView
                        android:id="@+id/login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Already have an account? Login here."
                        android:textAlignment="center"
                        android:layout_marginTop="15dp"
                        android:textSize="12dp"
                        android:fontFamily="@font/poppinsmedium"
                        android:textColor="@color/black"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
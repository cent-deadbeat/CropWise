<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".MyAccount">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:background="@color/prof_bg">

        <!-- Header -->

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="0dp"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/g"
                android:elevation="4dp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical" tools:layout_editor_absoluteY="8dp"
                    tools:layout_editor_absoluteX="16dp">

                <!--menu btn-->
                <ImageButton
                        android:id="@+id/menubtn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/menu"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Menu Button"
                        android:padding="8dp"/>

                <TextView
                        android:id="@+id/plant_name"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:text="My Account"
                        android:fontFamily="@font/fredokabold"
                        android:textColor="@android:color/white"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp" android:maxWidth="250dp"/>

            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>


        <!--search bar-->


        <!--Recyclerview 4 plants-->

        <!--Add plant-->

        <!--        add btn-->

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/toolbar"
                android:id="@+id/linearLayout2" android:layout_marginTop="45dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="20dp" android:layout_marginEnd="20dp">
            <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                <ImageView
                        android:layout_width="86dp"
                        android:layout_height="86dp" app:srcCompat="@drawable/prof_pic"
                        android:id="@+id/imageView16"/>
                <ImageView
                        android:layout_width="86dp"
                        android:layout_height="86dp" app:srcCompat="@drawable/profile"
                        android:id="@+id/profile_image" android:scaleType="centerCrop"
                        android:background="@drawable/circle_border"/>
                <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp" app:srcCompat="@drawable/change_dp"
                        android:id="@+id/change_dp" android:layout_gravity="top|end"
                        android:background="@android:color/transparent" android:scaleType="fitXY"
                        android:layout_marginTop="56dp"/>
            </FrameLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginStart="20dp">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/displayuser1"
                        android:fontFamily="@font/fredokabold" android:textColor="@color/g" android:textSize="20dp"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/displayemail1"
                        android:fontFamily="@font/poppinsregular" android:textColor="@color/black"
                        android:textSize="13dp"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:text="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/num_plants"
                            android:fontFamily="@font/fredokabold" android:textColor="@color/ddb"
                            android:textSize="17dp"/>
                    <TextView
                            android:text="Plants"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView32"
                            android:layout_weight="1" android:textSize="17dp" android:fontFamily="@font/fredokabold"
                            android:textColor="@color/ddb" android:layout_marginStart="5dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/scrollView3"
                android:layout_marginTop="20dp" app:layout_constraintBottom_toBottomOf="parent"
        >
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical" android:layout_marginStart="20dp"
                          android:layout_marginEnd="20dp" android:layout_marginBottom="20dp"
                          android:background="@drawable/profile_bg" android:padding="20dp"
                          android:layout_marginTop="10dp">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_marginTop="15dp"
                        android:layout_marginStart="3dp" android:layout_marginEnd="3dp">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" app:srcCompat="@drawable/account"
                            android:id="@+id/imageView18" app:tint="@color/g"
                            android:layout_gravity="top"/>
                    <TextView
                            android:text="Username"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" android:id="@+id/textView33"
                            android:fontFamily="@font/fredokabold" android:textColor="@color/g"
                            android:textSize="15dp" android:layout_marginStart="10dp"
                            android:layout_marginEnd="20dp" android:layout_gravity="center_vertical"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/displayuser2"
                            android:layout_weight="1" android:textAlignment="viewEnd"
                            android:fontFamily="@font/poppinsregular" android:textSize="13dp"
                            android:textColor="@color/black" android:layout_gravity="end"
                            android:layout_marginEnd="15dp"/>
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" app:srcCompat="@drawable/edit"
                            android:id="@+id/username_edit" app:tint="@color/g"
                            android:layout_gravity="end"
                    />
                </LinearLayout>

                <!--                username change-->

                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:ems="15"
                        android:id="@+id/username"
                        android:hint="Enter new username"
                        android:fontFamily="@font/poppinsregular"
                        android:drawableStart="@drawable/user"
                        android:drawablePadding="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:background="?android:attr/editTextBackground"
                        android:backgroundTint="@color/g" android:layout_marginTop="20dp" android:visibility="gone"
                        android:textSize="14dp"/>
                <TextView
                        android:id="@+id/errorUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:textSize="11dp"
                        android:visibility="gone" android:fontFamily="@font/poppinsregular"/>

                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:ems="15"
                        android:id="@+id/password_username"
                        android:hint="Please enter your password"
                        android:fontFamily="@font/poppinsregular"
                        android:drawableStart="@drawable/ass"
                        android:drawableEnd="@drawable/hide"
                        android:drawablePadding="5dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:background="?android:attr/editTextBackground"
                        android:backgroundTint="@color/g" android:layout_marginTop="8dp" android:visibility="gone"
                        android:textSize="14dp"/>

                <TextView
                        android:id="@+id/pass_error_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:textSize="11dp"
                        android:visibility="gone" android:fontFamily="@font/poppinsregular"/>

                <androidx.appcompat.widget.AppCompatButton
                        android:text="Change"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp" android:id="@+id/changeusername_btn"
                        android:background="@drawable/changebtn_bg" android:textColor="@color/white"
                        android:fontFamily="@font/fredokabold" android:layout_marginTop="10dp"
                        android:textAllCaps="false"
                        android:textSize="14dp" android:layout_gravity="center_horizontal"
                        android:visibility="gone"/>

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/prof_line"
                        android:id="@+id/imageView20" android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp" android:scaleType="fitXY"/>


                <!--change email-->

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_marginTop="15dp">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" app:srcCompat="@drawable/email"
                            android:id="@+id/image2" app:tint="@color/g"
                            android:layout_gravity="top|end"/>
                    <TextView
                            android:text="Email"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" android:id="@+id/textView36"
                            android:fontFamily="@font/fredokabold" android:textColor="@color/g"
                            android:textSize="15dp" android:layout_marginStart="10dp"
                            android:layout_marginEnd="20dp"
                            android:layout_gravity="clip_vertical|center_vertical"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/displayemail2"
                            android:layout_weight="1" android:textAlignment="viewEnd"
                            android:fontFamily="@font/poppinsregular" android:textSize="13dp"
                            android:textColor="@color/black" android:layout_gravity="end"
                            android:layout_marginEnd="15dp" android:maxWidth="150dp"/>
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" app:srcCompat="@drawable/edit"
                            android:id="@+id/email_edit" app:tint="@color/g"
                            android:layout_gravity="end"
                    />
                </LinearLayout>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:ems="15"
                        android:id="@+id/email"
                        android:hint="Enter new email"
                        android:fontFamily="@font/poppinsregular"
                        android:drawableStart="@drawable/user"
                        android:drawablePadding="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:background="?android:attr/editTextBackground"
                        android:backgroundTint="@color/g" android:layout_marginTop="20dp" android:visibility="gone"
                        android:textSize="14dp"/>
                <TextView
                        android:id="@+id/erroremail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:textSize="11dp"
                        android:visibility="gone" android:fontFamily="@font/poppinsregular"/>

                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:ems="15"
                        android:id="@+id/email_password"
                        android:hint="Please enter your password"
                        android:fontFamily="@font/poppinsregular"
                        android:drawableStart="@drawable/ass"
                        android:drawableEnd="@drawable/hide"
                        android:drawablePadding="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:background="?android:attr/editTextBackground"
                        android:backgroundTint="@color/g" android:layout_marginTop="8dp" android:visibility="gone"
                        android:textSize="14dp"/>

                <TextView
                        android:id="@+id/email_error_pass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:textSize="11dp"
                        android:visibility="gone" android:fontFamily="@font/poppinsregular"/>

                <androidx.appcompat.widget.AppCompatButton
                        android:text="Change"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp" android:id="@+id/changeemail_btn"
                        android:background="@drawable/changebtn_bg" android:textColor="@color/white"
                        android:fontFamily="@font/fredokabold" android:layout_marginTop="10dp"
                        android:textAllCaps="false"
                        android:textSize="14dp" android:layout_gravity="center_horizontal"
                        android:visibility="gone"/>

                <!--change pass-->

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/prof_line"
                        android:id="@+id/image6" android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp" android:scaleType="fitXY"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_marginTop="15dp">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" app:srcCompat="@drawable/ass"
                            android:id="@+id/image4" app:tint="@color/g"
                            android:layout_gravity="top|end"/>
                    <TextView
                            android:text="Password"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" android:id="@+id/textView39"
                            android:fontFamily="@font/fredokabold" android:textColor="@color/g"
                            android:textSize="15dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginStart="8dp" android:layout_gravity="center_vertical"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView40"
                            android:layout_weight="1" android:textAlignment="viewEnd"
                            android:fontFamily="@font/poppinsregular" android:textSize="14dp"
                            android:textColor="@color/black" android:layout_gravity="end"
                            android:layout_marginEnd="15dp"/>
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" app:srcCompat="@drawable/edit"
                            android:id="@+id/password_edit" app:tint="@color/g"
                            android:layout_gravity="end"
                    />
                </LinearLayout>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:ems="15"
                        android:id="@+id/changepassword"
                        android:hint="Enter new password"
                        android:fontFamily="@font/poppinsregular"
                        android:drawableStart="@drawable/ass"
                        android:drawablePadding="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:background="?android:attr/editTextBackground"
                        android:backgroundTint="@color/g" android:layout_marginTop="20dp" android:visibility="gone"
                        android:textSize="14dp" android:drawableEnd="@drawable/hide"/>
                <TextView
                        android:id="@+id/errorchange_pass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:textSize="11dp"
                        android:visibility="gone" android:fontFamily="@font/poppinsregular"/>

                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:ems="15"
                        android:id="@+id/change_pass_password"
                        android:hint="Please enter your password"
                        android:fontFamily="@font/poppinsregular"
                        android:drawableStart="@drawable/ass"
                        android:drawableEnd="@drawable/hide"
                        android:drawablePadding="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:background="?android:attr/editTextBackground"
                        android:backgroundTint="@color/g" android:layout_marginTop="8dp" android:visibility="gone"
                        android:textSize="14dp"/>

                <TextView
                        android:id="@+id/error_change_pass_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:textSize="11dp"
                        android:visibility="gone" android:fontFamily="@font/poppinsregular"/>

                <androidx.appcompat.widget.AppCompatButton
                        android:text="Change"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp" android:id="@+id/changepass_btn"
                        android:background="@drawable/changebtn_bg" android:textColor="@color/white"
                        android:fontFamily="@font/fredokabold" android:layout_marginTop="10dp"
                        android:textAllCaps="false"
                        android:textSize="14dp" android:layout_gravity="center_horizontal" android:visibility="gone"/>

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/prof_line"
                        android:id="@+id/imageView21" android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp" android:scaleType="fitXY"/>


                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_marginTop="20dp">
                    <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp" app:srcCompat="@drawable/ic_phone"
                            android:id="@+id/image5" app:tint="@color/g"
                            android:layout_gravity="top|end"/>
                    <TextView
                            android:text="Phone Number"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" android:id="@+id/textView43"
                            android:fontFamily="@font/fredokabold" android:textColor="@color/g"
                            android:textSize="15dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginStart="8dp" android:layout_gravity="center_vertical"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView41"
                            android:layout_weight="1" android:textAlignment="viewEnd"
                            android:fontFamily="@font/poppinsregular" android:textSize="14dp"
                            android:textColor="@color/black" android:layout_gravity="end"
                            android:layout_marginEnd="15dp"/>

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" app:srcCompat="@drawable/edit"
                            android:id="@+id/phone_edit" app:tint="@color/g"
                            android:layout_gravity="end"
                    />
                </LinearLayout>
                <!-- Replace the existing EditText for Phone Number with this -->
                <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/verifyPhoneButton"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:text="Verify Phone Number"
                        android:background="@drawable/changebtn_bg"
                        android:textColor="@color/white"
                        android:fontFamily="@font/fredokabold"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center_horizontal"
                        android:visibility="gone" android:paddingStart="20dp"
                        android:paddingEnd="20dp" android:textSize="14dp" android:textAllCaps="false"/>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                    <!-- Phone Icon -->
                    <ImageView
                            android:id="@+id/imageView19"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:foregroundGravity="center_vertical"
                            app:srcCompat="@drawable/ic_baseline_phone_24"
                            android:visibility="gone"/>

                    <!-- Spinner for Country Code -->
                    <Spinner
                            android:id="@+id/spinnerCountryCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/imageView19"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:background="@android:color/transparent"
                            android:spinnerMode="dropdown"
                            android:padding="5dp"
                            android:visibility="gone" />

                    <!-- EditText for Phone Number -->
                    <EditText
                            android:id="@+id/changephone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/spinnerCountryCode"
                            android:layout_centerVertical="true"
                            android:hint="Phone Number"
                            android:inputType="phone"
                            android:fontFamily="@font/poppinsregular"
                            android:textColor="@color/black"
                            android:textColorHint="@color/gray"
                            android:background="?android:attr/editTextBackground"
                            android:backgroundTint="@color/g"
                            android:layout_marginStart="5dp"
                            android:paddingEnd="10dp"
                            android:textSize="14dp"
                            android:visibility="gone" />
                </RelativeLayout>
                <TextView
                        android:id="@+id/errorchange_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:textSize="11dp"
                        android:visibility="gone" android:fontFamily="@font/poppinsregular"/>

                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:ems="15"
                        android:id="@+id/change_phone_password"
                        android:hint="Please enter your password"
                        android:fontFamily="@font/poppinsregular"
                        android:drawableStart="@drawable/ass"
                        android:drawableEnd="@drawable/hide"
                        android:drawablePadding="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:background="?android:attr/editTextBackground"
                        android:backgroundTint="@color/g" android:layout_marginTop="8dp" android:visibility="gone"
                        android:textSize="14dp"/>

                <TextView
                        android:id="@+id/error_change_phone_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:textSize="11dp"
                        android:visibility="gone" android:fontFamily="@font/poppinsregular"/>

                <androidx.appcompat.widget.AppCompatButton
                        android:text="Change"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp" android:id="@+id/changephone_btn"
                        android:background="@drawable/changebtn_bg" android:textColor="@color/white"
                        android:fontFamily="@font/fredokabold" android:layout_marginTop="10dp"
                        android:textAllCaps="false"
                        android:textSize="14dp" android:layout_gravity="center_horizontal" android:visibility="gone"/>

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/prof_line"
                        android:id="@+id/imageView22" android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp" android:scaleType="fitXY" android:layout_marginBottom="20dp"/>



                <!-- Two-Factor Authentication Toggle -->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:background="@drawable/profile_bg" android:visibility="gone">

                    <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            app:srcCompat="@drawable/ass"
                            app:tint="@color/g"
                            android:layout_gravity="center_vertical"/>

                    <TextView
                            android:id="@+id/textView_2fa"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Enable Two-Factor Authentication"
                            android:fontFamily="@font/fredokabold"
                            android:textColor="@color/g"
                            android:textSize="15dp"
                            android:layout_marginStart="10dp"
                            android:layout_gravity="center_vertical"/>

                    <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switch_2fa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:layout_gravity="center_vertical"
                            android:thumbTint="@color/g"
                            android:trackTint="@color/gray"/>
                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigationView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/sidebar_header"
            app:menu="@menu/sidebar_menu"
            android:background="@color/soil"
            app:itemIconTint="@color/white"

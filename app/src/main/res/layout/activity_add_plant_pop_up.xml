<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@drawable/adding_plant_bg">

    <!-- Close Button -->
    <ImageButton
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ex_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"/>

    <!-- Title -->
    <TextView
            android:id="@+id/textView25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fredokabold"
            android:text="Add new plant"
            android:textAlignment="center"
            android:textColor="@color/g"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/close"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"/>

    <!-- ScrollView for Content -->
    <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="410dp"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@id/textView25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="10dp" android:layout_marginEnd="10dp">

                    <!-- Plant Name Input -->
                    <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/plant_name_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundMode="outline"
                            app:boxStrokeWidthFocused="2dp"
                            android:layout_marginTop="10dp"
                            app:helperTextTextColor="@color/red"
                            app:boxStrokeColor="@color/input_border"
                            app:boxStrokeErrorColor="@color/red"
                            app:boxCornerRadiusBottomEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxStrokeWidth="2dp" app:hintTextColor="@color/g">

                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/inputplantName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Enter plant name"
                                android:padding="10dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/hint"
                                android:fontFamily="@font/poppinsregular"
                                android:textSize="15dp"
                                android:backgroundTint="@color/white" android:maxLines="1" android:inputType="text"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                            android:text="Please choose whether to set a watering schedule or automatically pour base on soil moisture level. \nNote: Setting water schedule is optional."
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/textView26"
                            android:fontFamily="@font/fredokabold" android:textColor="@color/g"
                            android:textSize="14dp" android:layout_marginTop="25dp"/>

                    <!-- Selection Between Water Scheduling & Soil Moisture -->
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="15dp">

                        <!-- Soil Moisture -->
                        <LinearLayout
                                android:id="@+id/soil_moisture"
                                android:layout_width="0dp"
                                android:layout_height="60dp"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:paddingStart="20dp"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:background="@drawable/inactive_mode_bg">

                            <ImageView
                                    android:id="@+id/drop"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/moisture"/>

                            <TextView
                                    android:id="@+id/schedule"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Soil\nMoisture"
                                    android:fontFamily="@font/poppinsregular"
                                    android:textColor="@color/g"
                                    android:textSize="13dp"
                                    android:layout_marginStart="10dp"/>
                        </LinearLayout>

                        <View android:layout_width="10dp" android:layout_height="60dp"/>

                        <!-- Watering Schedule -->
                        <LinearLayout
                                android:id="@+id/water_scheduling"
                                android:layout_width="0dp"
                                android:layout_height="60dp"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:background="@drawable/inactive_mode_bg" android:paddingStart="20dp">

                            <ImageView
                                    android:id="@+id/time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/sched"/>

                            <TextView
                                    android:id="@+id/moisture"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Watering\nSchedule"
                                    android:fontFamily="@font/poppinsregular"
                                    android:textColor="@color/g"
                                    android:textSize="13dp"
                                    android:layout_marginStart="10dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                            android:id="@+id/mode_error"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="That schedule already exists!"
                            android:textSize="13dp"
                            android:textColor="@color/red"
                            android:visibility="gone"
                            android:paddingTop="5dp" android:fontFamily="@font/poppinsregular"/>

                    <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/moisture_input_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundMode="outline"
                            app:boxStrokeWidthFocused="2dp"
                            android:visibility="gone"
                            android:layout_marginTop="20dp" app:helperTextTextColor="@color/red"
                            app:boxStrokeColor="@color/input_border" app:boxStrokeErrorColor="@color/red"
                            app:boxCornerRadiusBottomEnd="12dp" app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusTopStart="12dp" app:boxCornerRadiusTopEnd="12dp"
                            app:boxStrokeWidth="2dp" app:hintTextColor="@color/g">

                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/moisture_input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Minimum Soil Moisture (%)"
                                android:padding="10dp"
                                android:textColor="@color/black"
                                android:inputType="number"
                                android:textColorHint="@color/hint" android:fontFamily="@font/poppinsregular"
                                android:textSize="15dp" android:backgroundTint="@color/white"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Add Watering Schedule Button -->
                    <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/scheduling_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/add_btn_bg"
                            android:text="Add daily watering schedule"
                            android:textColor="@color/g"
                            android:fontFamily="@font/fredokabold"
                            android:textSize="15dp"
                            android:visibility="gone"
                            android:layout_marginTop="20dp" android:textAllCaps="false"/>

                    <!-- Schedule preview -->
                    <TextView
                            android:text="Daily Watering Schedule:"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/textView27"
                            android:fontFamily="@font/fredokabold" android:textColor="@color/g"
                            android:textSize="14dp" android:layout_marginTop="20dp" android:visibility="gone"/>

                    <com.google.android.flexbox.FlexboxLayout
                            android:id="@+id/schedule_preview_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:padding="10dp"
                            app:flexWrap="wrap"
                            app:justifyContent="flex_start" android:layout_marginTop="10dp">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/schedule_preview"
                                android:fontFamily="@font/poppinsregular" android:textColor="@color/black"
                                android:textSize="13dp"/>
                    </com.google.android.flexbox.FlexboxLayout>

                    <!-- Error Message for Duplicates -->

                    <TextView
                            android:id="@+id/schedule_error"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="That schedule already exists!"
                            android:textSize="13dp"
                            android:textColor="@color/red"
                            android:visibility="gone"
                            android:paddingTop="5dp" android:fontFamily="@font/poppinsregular"/>




                    <!-- Image Selector (Acts as Button) -->

                    <TextView
                            android:text="Choose an icon for your plant, please make sure it's a .png file with a transparent background for better visuals."
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/textView29"
                            android:fontFamily="@font/fredokabold" android:textColor="@color/g"
                            android:textSize="14dp" android:layout_marginTop="25dp" android:textAlignment="viewStart"/>
                    <ImageView
                            android:id="@+id/image_preview"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/img"
                            android:background="@drawable/edittxtbg"
                            android:layout_marginTop="20dp" android:layout_gravity="center"/>


                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Fixed Add Button at the Bottom -->
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/scrollView2"
            android:layout_marginStart="10dp" android:layout_marginEnd="10dp">
        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/addplant_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/add_btn_bg"
                android:text="ADD"
                android:textColor="@color/g"
                android:fontFamily="@font/fredokabold"
                android:textSize="15dp"
                android:layout_marginBottom="20dp" android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"/>

        <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:indeterminate="true"
                style="@android:style/Widget.Material.ProgressBar.Large"
                android:layout_gravity="center" android:progressTint="@color/g"
                android:secondaryProgressTint="@color/lg" android:indeterminateTint="@color/g"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

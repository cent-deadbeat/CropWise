<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected (active) item -->
    <item android:drawable="@drawable/ic_menubg" android:state_checked="true"/>



    <!-- Enabled items (default background for all) -->
    <item android:drawable="@drawable/ic_menubg" android:state_enabled="true"/>

    <!-- Disabled items (transparent, no background) -->
    <item android:drawable="@android:color/transparent" android:state_enabled="false"/>
</selector>

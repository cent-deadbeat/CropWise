<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SoilMate" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/g</item>
        <!-- Customize your theme here. -->
    </style>



    <string name="underlined_text"><u>Back to Login Page</u></string>


    <style name="menu_font">
        <item name="android:textSize">13dp</item>
        <item name="android:fontFamily">@font/poppinsbold</item>
    </style>

    <style name="menu_shape">
        <item name="android:background">@color/db</item>
        <item name="android:itemBackground">@color/db</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_marginBottom">50dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>


    <style name="menu_item_shape">
        <item name="cornerSize">0dp</item> <!-- Removes unwanted border-radius -->
    </style>


    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/g</item>
        <item name="colorAccent">@color/soil</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>




    <style name="menu_item_spacing">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:height">20dp</item>
        <item name="android:background">@color/soil</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>


    <style name="CustomImageShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">30dp</item>
    </style>






</resources>


